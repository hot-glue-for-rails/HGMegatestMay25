<div class="row">
  <div class='col-md-1 cell--person--name' >  
    <span class='<%= "alert alert-danger" if person.errors.details.keys.include?(:name) %>'  >
        <%= f.text_field :name, value: person.name, autocomplete: 'off', size: 40, class: 'form-control', type: '' %>
       
      
      <label class='text-muted small form-text' for=''>Name</label>
    </span>
   
  </div>
  <div class='col-md-1 cell--person--characteristics' >  
    <span class='<%= "alert alert-danger" if person.errors.details.keys.include?(:characteristics) %>'  >
       <%= f.collection_check_boxes :characteristic_ids, Characteristic.all, :id, :label, {} do |m| %>
          <%= m.check_box %> <%= m.label %><br />
        <% end %>
      <label class='text-muted small form-text' for=''>Characteristics</label>
    </span>
   
  </div>

  <div class="col-md-2">
    <%= link_to "Cancel", people_path,  {class: "btn btn-secondary"} %>
    <%= f.submit "Save", class: "btn btn-primary pull-right" %>
  </div>
</div>
